<!DOCTYPE html>
<html>
<head>
  <title>TestPaper</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
  <div class="container">
    <span class="brand">testpaper</span>

  <% if session[:user] %>
    <div class="context">
      <div class="user">
            <span><%= session[:user].name %></span>
            <a class="logout" href="/logout">Logout</a>
      </div>

      <ul class="menu">
        <li>
          <a class="create" href="#">New</a>
        </li>
      </ul>
    </div>
  <% end %>
  </div>
</div>
<%= yield %>

</body>
</html>
