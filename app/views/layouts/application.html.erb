<!DOCTYPE html>
<html>
<head>
  <title>TestPaper</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
  <div class="container">
    <span class="brand">testpaper</span>

    <div class="user">
      <% if session[:user] %>
          <span><%= session[:user].name %></span>
          <a class="logout" href="/logout">Logout</a>
      <% end %>
    </div>
  </div>
</div>
<%= yield %>

</body>
</html>
